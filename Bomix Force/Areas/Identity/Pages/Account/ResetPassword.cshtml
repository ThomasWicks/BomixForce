@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Recuperação de senha";
}

<h1 class="text-center mt-5 font-project">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="change-pass-box">
        <div class="change-pass-form">
            <h5>Mudar senha</h5>
            <form id="change-password-form" method="post">
                <div class="login-inputs">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <label>Senha atual</label>
                    <input asp-for="Input.UserName" class="input" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    <label asp-for="Input.Password">Nova senha</label>
                    <input asp-for="Input.Password" class="input" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <label asp-for="Input.ConfirmPassword">Confirmar nova senha</label>
                    <input asp-for="Input.ConfirmPassword" class="input" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="right-button">
                    <button type="submit" style="margin-right:0; margin-bottom:0; width:30%;" class="bt-save">Alterar senha</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
