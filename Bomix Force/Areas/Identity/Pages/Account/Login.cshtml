@page
@model LoginModel

@{
ViewData["Title"] = "Log in";
}

<!-- <h1>@ViewData["Title"]</h1> -->
<body class="">
    <div class="login-container">
        <img style="display: block; margin-left: auto; margin-right: auto; margin-bottom: 1%; " src="~/Assets/logo-bomix-header.png" />
        <div class="login-box">
            <div class="login-form">
                <form id="account" method="post">
                    <div class="login-center-button">
                        <div class="login-inputs">
                            @Html.ValidationMessage("loginError", "", new { @class = "text-danger" })
                            <label class="login-label" for="exampleInputEmail1">Usuário</label>
                            <input asp-for="Input.UserName" placeholder="Digite seu usuario" class="input mb-2" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            <label class="login-label mt-1" for="exampleInputPassword1">Senha</label>
                            <input asp-for="Input.Password" placeholder="Digite sua senha" class="input" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <div class="btn btn-link">
                                <a  asp-area="Identity" asp-page="/Account/ForgotPassword" asp-route-returnUrl="@Url.Action("ForgotPassword", "Manage", new { area = "" })">Esqueci minha senha</a>
                            </div>
                        </div>
                        <button type="submit" class="bt-save">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- <footer class="mastfoot mt-auto">
        <div class="inner">
    Email de contato: teste@teste.com
        </div>
      </footer> -->
</body>
<style lang="scss" scoped>
    html,
    body {
        display: -ms-flexbox;
        display: flex;
        flex-direction: column;
        color: #F7F8FC;
        height: 100%;
    }
</style>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

