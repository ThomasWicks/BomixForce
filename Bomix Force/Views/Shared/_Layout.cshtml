<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bomix_Force</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <!-- fazer o if para verificar se é tela de login -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bomix Force</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <img src="https://www.w3schools.com/images/w3schools_green.jpg" alt="W3Schools.com" style="width:50px;height:50px;">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- fazer o if para verificar cada perfil e ver se tem a permissão de ver ou não e se é a tela de login -->
    <aside class="navbar navbar-toggleable-sm navbar-light bg-white border-right position-fixed margin-topbar" style="border-heigth:600px;width: 150px;">
        <div>
            <img class="rounded mx-auto d-block" src="https://conteudo.imguol.com.br/blogs/174/files/2018/05/iStock-648229868.jpg" alt="W3Schools.com" style="width:50px;height:50px;">
            <h5 class="text-center">Usuarios</h5>
        </div>
        <div>
            <i class="fa fa-archive rounded mx-auto d-block" style="width:50px;height:50px;"></i>
            <h5>Pedidos</h5>
        </div>
        <div>
            <img class="rounded mx-auto d-block" src="https://conteudo.imguol.com.br/blogs/174/files/2018/05/iStock-648229868.jpg" alt="W3Schools.com" style="width:50px;height:50px;">
            <h5>Vendas</h5>
        </div>
        <div>
            <img class="rounded mx-auto d-block" src="https://conteudo.imguol.com.br/blogs/174/files/2018/05/iStock-648229868.jpg" alt="W3Schools.com" style="width:50px;height:50px;">
            <h5>Outros</h5>
        </div>
    </aside>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Bomix_Force - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
