@model Bomix_Force.ViewModels.UserViewEdit


<div class="modal fade" id="detailsOrder">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editUserLabel">Editar Usuário</h4>
            </div>
            <div class="modal-body">
                <form action="Edit" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id">
                        <input type="hidden" asp-for="@Model.CompanyId">
                        <input type="hidden" asp-for="@Model.UserID">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Setor"></label>
                        <input asp-for="Setor" class="form-control" />
                        <span asp-validation-for="Setor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cargo"></label>
                        <input asp-for="Cargo" class="form-control" />
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tel"></label>
                        <input asp-for="Tel" class="form-control" />
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>

                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>

    </div>


</div>
