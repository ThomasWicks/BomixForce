@model Bomix_Force.ViewModels.UserViewEdit


<div class="modal fade" id="detailsOrder">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 class="modal-title float-left text-white">Editar</h4>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="Edit" method="post">
                    <div class="row">
                        <div class="col-6">
                            <input type="hidden" asp-for="@Model.Id">
                            <input type="hidden" asp-for="@Model.CompanyId">
                            <input type="hidden" asp-for="@Model.UserID">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-6">
                            <label asp-for="Cargo"></label>

                            <select asp-for="Cargo" id="selectCargo" class="form-control" name="selectCargo">
                                <option value="Propriétario">Propriétario</option>
                                <option value="Diretor">Diretor</option>
                                <option value="Gerente">Gerente</option>
                                <option value="Coordenador">Coordenador</option>
                                <option value="Supervisor">Supervisor</option>
                                <option value="Analista">Analista</option>
                                <option value="Assistente/Secretária">Assistente/Secretária</option>
                                <option value="Genérico Industrial">Genérico Industrial</option>
                                <option value="Genérico ADM">Genérico ADM</option>
                            </select>
                            <span asp-validation-for="Cargo" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="Setor"></label>
                            <select asp-for="Setor" id="selectSetor" class="form-control" name="selectSetor">
                                <option value="Comercial">Comercial</option>
                                <option value="PCP/S$OP">PCP/S$OP</option>
                                <option value="Qualidade">Qualidade</option>
                                <option value="Compras">Compras</option>
                                <option value="Suprimentos">Suprimentos</option>
                                <option value="Genérico Industrial">Genérico Industrial</option>
                                <option value="Genérico ADM">Genérico ADM</option>
                                <option value="Produção">Produção</option>
                                <option value="Financeiro">Financeiro</option>
                                <option value="Logística">Logística</option>
                                <option value="Marketing">Marketing</option>
                            </select>
                            <span asp-validation-for="Setor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 mb-4">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <button type="button" class="btn btn-danger" data-dismiss="modalEdit">Cancelar</button>
                    <button type="submit" class="btn btn-primary float-right">Editar</button>
                </form>
            </div>
        </div>

    </div>


</div>
