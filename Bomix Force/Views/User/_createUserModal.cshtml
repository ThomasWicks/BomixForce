@model Bomix_Force.ViewModels.UserViewModel

<div class="modal fade" id="CreateUserModal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal Cadastro-->
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 class="modal-title float-left text-white">Cadastro</h4>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="User" asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="@Model.UserName"></label>
                            <input asp-for="@Model.UserName" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="@Model.Email"></label>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-6">
                            <label asp-for="@Model.Name"></label>
                            <input asp-for="@Model.Name" class="form-control" />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="@Model.PhoneNumber"></label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row py-2 mb-4">
                        <div class="col-6">
                            <label asp-for="@Model.Cargo"></label>
                            <select asp-for="@Model.Cargo" class="form-control " >
                                <option value="Propriétario">Propriétario</option>
                                <option value="Diretor">Diretor</option>
                                <option value="Gerente">Gerente</option>
                                <option value="Coordenador">Coordenador</option>
                                <option value="Supervisor">Supervisor</option>
                                <option value="Analista">Analista</option>
                                <option value="Assistente/Secretária">Assistente/Secretária</option>
                                <option value="Genérico Industrial">Genérico Industrial</option>
                                <option value="Genérico ADM">Genérico ADM</option>
                            </select>
                            <span asp-validation-for="@Model.Cargo" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="@Model.Setor"></label>
                            <select asp-for="@Model.Setor" class="form-control" >
                                <option value="Comercial">Comercial</option>
                                <option value="PCP/S$OP">PCP/S$OP</option>
                                <option value="Qualidade">Qualidade</option>
                                <option value="Compras">Compras</option>
                                <option value="Suprimentos">Suprimentos</option>
                                <option value="Genérico Industrial">Genérico Industrial</option>
                                <option value="Genérico ADM">Genérico ADM</option>
                                <option value="Produção">Produção</option>
                                <option value="Financeiro">Financeiro</option>
                                <option value="Logística">Logística</option>
                                <option value="Marketing">Marketing</option>
                            </select>
                            <span asp-validation-for="@Model.Setor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row py-2 mb-4">
                        <div class="col-6">
                            <label asp-for="@Model.Password"></label>
                            <input asp-for="@Model.Password" class="form-control" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="@Model.ConfirmPassword"></label>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary float-right">Cadastrar</button>
                </form>
            </div>
        </div>

    </div>
</div>