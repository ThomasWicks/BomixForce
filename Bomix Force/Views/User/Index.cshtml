@model IEnumerable<Bomix_Force.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="clearfix mx-5">
    <h2 class="mt-3">Usuário</h2>
    <a class="float-right btn btn-primary btn-lg mb-3" asp-area="Identity" asp-page="/Account/Register">Cadastrar</a>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark thead-sm">
                <tr>
                    <th scope="col" class="text-center">
                        Username
                    </th>
                    <th scope="col" class="text-center">
                        Email
                    </th>
                    <th scope="col" class="text-center">
                        Company
                    </th>
                    <th scope="col" class="text-center">
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">

                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-center">

                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="text-center">

                                @Html.DisplayFor(modelItem => item.Company.Name)
                            </td>

                            <td class="text-center">
                                <a href="@Url.Action(" Edit", new {id=item.Id} )">
                                    <i class="fas fa-user-edit"> </i>
                                </a> |
                              

                                <a type="button" class="fas fa-user-times" data-toggle="modal" data-target="#@item.Name"></a>
                                <div class="modal fade" id=@item.Name role="dialog">
                                    <div class="modal-dialog">
      
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Modal Header</h4>
                                            </div>
                                            <div class="modal-body">

                                                <p>Você tem certeza que deseja deletar @Html.DisplayFor(modelItem => item.Name)?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-action="Delete">
                                                    @Html.HiddenFor(modelItem => item.Name)
                                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                                </form>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <!-- @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) -->
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>