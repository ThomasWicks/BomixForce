@model IEnumerable<Bomix_Force.ViewModels.NonconformityViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="pagination-history">
        <a asp-area="" asp-controller="Home" asp-action="Login" class="pagina-anterior">Home / </a>
        <a class="pagina-atual">Não Conformidade</a>
    </div>
    <p>
        <a class="float-right mb-2 mr-3" type="button" asp-action="Create"><img class="ic-size" src="~/Assets/ic_add_non_conf.png" /></a>
    </p>
    <div class="table-responsive mt-5">
        <table class="table table-striped">
            <thead>
                <tr class="bg-dark">
                    <th class="text-center text-white">
                        Lote
                    </th>
                    <th class="text-center text-white">
                        Descrição
                    </th>
                    <th class="text-center text-white">
                        NF
                    </th>
                    <th class="text-center text-white">
                        Status
                    </th>
                    @if (User.IsInRole("Employee"))
                    {
                        <th class="text-center text-white">
                            Upload
                        </th>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <th class="text-center text-white">
                            Download
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (@Model?.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center ">
                                @Html.DisplayFor(modelItem => item.Lote)
                            </td>
                            <td class="text-center ">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Nf)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            @if (User.IsInRole("Employee"))
                            {
                                <td class="text-left">
                                    <form asp-action="Upload" enctype="multipart/form-data">
                                        <input type="hidden" name="Id" id="Id" value="@item.Id" />
                                        <input type="file" id="FilePath" name="FilePath">
                                        <button type="submit" class="btn btn-primary">Upload</button>
                                    </form>
                                </td>
                            }
                            @if (User.IsInRole("User"))
                            {
                                <td class="text-center">
                                    <form asp-action="Download">
                                        <input type="hidden" id="Id" name="Id" value="@item.Id" />
                                        <button type="submit" class="btn btn-primary">Download</button>
                                    </form>
                                </td>
                            }


                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            <h6>Não foi possível achar as informações de não conformidade.</h6>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>


</script>

