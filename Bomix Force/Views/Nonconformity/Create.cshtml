@model Bomix_Force.ViewModels.NonconformityViewModel

@{
    ViewData["Title"] = "Create";

    <div style="display:none" id="loadingSpinnerOverlay">
        <div class="spinner" id="spinner"></div>
        <div class="overlay" id="overlay"></div>
    </div>
}

<div class="container createNonconf">
    <div class="pagination-history">
        <a asp-area="" asp-controller="Home" asp-action="Login" class="pagina-anterior">Home / </a>
        <a asp-action="Index" class="pagina-anterior">Não Conformidade /</a>
        <a class="pagina-atual">Registar não Conformidade</a>
    </div>
    <h3 class="text-center title-font">Registro de não conformidade</h3>

    <hr />
    <div class="row">
        <div class="col-md-6" style="align-content: center">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Lote" class="control-label"></label>
                    <input asp-for="Lote" class="form-control input" />
                    <span asp-validation-for="Lote" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Nota Fiscal</label>
                    <input asp-for="Nf" class="form-control input" />
                    <span asp-validation-for="Nf" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Quantidade</label>
                    <input asp-for="Quantity" class="form-control input" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Item</label>
                    <select asp-for="SelectedItem" class="form-control input">
                        @foreach (var item in Model.Itens)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div class="text-center">
                    <label class="control-label">Insira uma foto da não conformidade.</label>
                </div>
                <div class="image-upload text-center">
                    <label for="file-input">
                        <img style="width: 60px; height: 60px; cursor: pointer;" src="~/Assets/ic_upload.png" />
                    </label>
                    <input asp-for="FilePath" id="file-input" type="file"
                           name="Anexar RNC" />
                </div>
                <div style="margin-top:15px">
                    <output name="result"></output>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control input" rows="4"></textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group float-right">
                    <input type="submit" onclick="startOverlay()" value="Enviar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function startOverlay() {
        document.getElementById('loadingSpinnerOverlay').style.display = 'block';
    }
</script>