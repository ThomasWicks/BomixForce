@model List<Bomix_Force.ViewModels.FinancialViewModel>
@{
    ViewData["Title"] = "Details";

    @*<div style="display:none" id="loadingSpinnerOverlay">
            <div class="spinner" id="spinner"></div>
            <div class="overlay" id="overlay"></div>
        </div>*@
}
<div class="container createNonconf">
    <div class="">
        <a asp-action="Index" class="btn btn-danger font-project mt-3" style="color: white; background-color: #D52229;">Voltar</a>
    </div>
    <div class="card text-center align-items-center mt-3">
        <h3 class="card-header align-self-stretch">Arquivos</h3>
        <div class="align-items-center col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-12">
                <label>Arquivos</label>
                <select onchange="showfields(this.value)" class="form-control">
                    <option value="">Selecione o documento</option>
                    <option value="NF">Nota Fiscal</option>
                    <option value="Boletos">Boletos </option>
                    <option value="XAML">XAML</option>
                </select>
                <span id="createSetorSpan" class="text-danger"></span>
            </div>
            <div class="form-group col-12" id="parcelasType" style="display: none">
                <label>Parcelas</label>
                <select class="form-control">
                    <option value="">Selecione uma parcela</option>
                    <option >Parcela 1</option>
                    <option >Parcela 2 </option>
                    <option >Parcela 3</option>
                </select>
                <span id="createSetorSpan" class="text-danger"></span>
            </div>
            <div class="form-group float-right">
                <input type="submit" onclick="startOverlay()" value="Baixar" class="btn btn-primary font-project mr-3" style="color: white; background-color: #002A51;" />
                @*<a class="btn btn-primary font-project mr-3" style="color: white; background-color: #002A51;" ><i class="fas fa-file-download"></i></a>*@
            </div>
        </div>
    </div>
    <ol></ol>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function showfields(value) {
        if (value != "Boletos") {
            $('#parcelasType').hide();
        } else {
            console.log("here")
            $('#parcelasType').show();
        }
    }

</script>

<style>
    .tag {
        height: 12px;
        width: 12px;
    }
</style>