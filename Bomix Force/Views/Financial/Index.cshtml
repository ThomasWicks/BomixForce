                    </div>
                    @*<div class=" ml-2">
            <button class="btn btn-primary font-project" type="submit" style="color: white; background-color: #002A51;">Buscar</button>
        </div>*@
                </div>
            </form>

        }
        <hr />
        <div class="table-responsive mt-5">
            <table id="#tableOrder" class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">
                            NF
                            @if (ViewBag.filter == "NotaAsc")
                            {
                                <a href="@Url.Action("Index", "Financial", new { filter = "NotaDesc" })"><i class="fas fa-caret-up"></i></a>
                            }
                            @if (ViewBag.filter != "NotaAsc")
                            {
                                <a href="@Url.Action("Index", "Financial", new { filter = "NotaAsc" })"><i class="fas fa-caret-down"></i></a>
                            }
                        </th>
                        <th class="text-center">
                            Emissão
                            @if (ViewBag.filter == "EmissaoAsc")
                            {
                                <a href="@Url.Action("Index", "Financial", new { filter = "EmissaoDesc" })"><i class="fas fa-caret-up"></i></a>
                            }
                            @if (ViewBag.filter != "EmissaoAsc")
                            {
                                <a href="@Url.Action("Index", "Financial", new { filter = "EmissaoAsc" })"><i class="fas fa-caret-down"></i></a>
                            }
                        </th>
                        <th class="text-center">
                            Cliente
                        </th>
                        <th class="text-center">
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody id="tableFinancialbody">

                    @if (Model?.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {

                        }
                    }
                    else
                    {
                        @if (!User.IsInRole("Company"))
                        {
                            <tr>
                                <td colspan="9" class="text-center">
                                    <h6>Não foi possível encontrar NFs.</h6>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">
                                    <h6>Não foi possível encontrar NFs.</h6>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <div class="text-center" id="loadingdiv">
                <div class="spinner-border" role="status">
                    <span class="sr-only text-center">Carregando...</span>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery-1.7.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#loadingdiv").hide();
        var filter = '@(ViewBag.filter)'
        var searchString = '@(ViewBag.searchString)'
        var orders = '@(ViewBag.orders)'
        var modelLenght = '@(Model?.Count)'
        modelLenght = modelLenght ? modelLenght : 0
        var dataexist = true
        var inProgress = false
        currentPageNumber = 0;
        loadData(currentPageNumber)
        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() > $(document).height() - 20 && !inProgress && dataexist) {
                inProgress = true;
                currentPageNumber += 1;
                loadData(currentPageNumber);
                console.log("teste")
                $("#loadingdiv").show();
            }
        }
            )
        function loadData(currentPage) {

            if (currentPageNumber != 0 && currentPageNumber * 20 > modelLenght ) {
                dataexist = false
                $("#loadingdiv").hide();
            }
            $.ajax({
                url: 'InfiniteScroll',
                data: {
                    pageNumber: currentPage, pageSize: 20, filter: filter, searchString: searchString
                },
                method: 'Post',
                dataType: 'html',
                success: function (data) {
                    var ordertable = $('#tableFinancialbody');
                    ordertable.append(data)
                    inProgress = false;
                    $("#loadingdiv").hide();
                }
            })
        }
    })
</script>



