@model IEnumerable<Bomix_Force.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="clearfix mx-5">
    <h2 class="mt-3">Pedidos</h2>
<div class="table-responsive mt-4">
<table class="table table-hover">
    <thead class="thead-dark thead-sm">
                <tr>
                    <th scope="col" class="text-center">
                        Numéro de pedido
                    </th>
                    <th scope="col" class="text-center">
                        Data de Pedido
                    </th>
                    <th scope="col" class="text-center">
                        Status de Pedido
                    </th>
                    <th scope="col" class="text-center">
                        Ações
                    </th>
                </tr>
    </thead>
    <tbody>
        @if (Model?.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status_Order)
                    </td>
                    <td>
                    <a href="" type="button" data-toggle="modal" data-target="#teste"> <i class="fas fa-copy"></i></a>
                        @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @*@Html.ActionLink("Delete", "Delete", new {id=item.Id })*@
                    </td>
                </tr>
            }
        }else{
                     <tr>
                        <td>
                        <h6>Nenhum Pedido encontrado.</h6>
                        </td>
                     </tr>
                }
        </tbody>
</table>
</div>
</div>
