@model Bomix_Force.ViewModels.OrderViewModel

<div class="modal fade" id="editUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editUserLabel">Editar Usuário</h4>
            </div>
            <div class="modal-body">
                <div class="col-sm-12 mt-3">
                    @foreach (var item in Model.Item)
                    {
                        <div class="card border border-primary">
                            <div class="card-body">
                                <h6 class="card-title"><strong>Produto: @item.ProductId </strong></h6>
                                <p class="card-text"><strong>Quantidade: @item.Quantity</strong></p>
                                <p class="card-text"><strong>Stauts: @item.Status_art</strong> </p>
                                <p class="card-text"><strong>Description: @item.Description </strong></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-lg fas fa-copy float-right"> Duplicar</button>
            </div>
        </div>

    </div>


</div>
